# Server configuration
PORT=3000
NODE_ENV=development

# OpenAI API (for text-to-speech and optional chat)
OPENAI_API_KEY=your_openai_api_key

# Microsoft Cognitive Services Speech (for fallback text-to-speech)
SPEECH_KEY=your_microsoft_speech_key
SPEECH_REGION=your_microsoft_speech_region

# WatsonX AI (for chat responses)
WATSONX_AI_PROJECT_ID=your_watsonx_project_id
# Or use SPACE_ID if PROJECT_ID is not available
# WATSONX_AI_SPACE_ID=your_watsonx_space_id
WATSONX_AI_SERVICE_URL=https://us-south.ml.cloud.ibm.com